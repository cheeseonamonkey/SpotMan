<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/crdTrackSimple"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardBackgroundColor="#0D5A0303">

    <LinearLayout
        android:id="@+id/linRootInCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#33854646"
        android:orientation="horizontal"
        android:padding="2dp">

        <LinearLayout
            android:id="@+id/linLeft"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="1dp"
                tools:src="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtTrackSimpleTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    android:maxWidth="200dp"
                    android:text="Title"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtTrackSimpleArtist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    android:fontFamily="sans-serif-light"
                    android:maxWidth="200dp"
                    android:text="Artist"
                    android:textSize="12dp"
                    android:textStyle="italic" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linRight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1.3"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/ckbHeartTrack"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/hearticon"
                android:button="@drawable/emptyimg"
                android:checked="false"
                android:minWidth="0dp"
                android:minHeight="0dp" />

            <ImageButton
                android:id="@+id/btnTrackCardOptions"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#00FFFFFF"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/dotsverticon" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>