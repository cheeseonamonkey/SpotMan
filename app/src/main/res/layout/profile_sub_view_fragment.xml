<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="2dp"
    android:scrollbarStyle="outsideInset"
    tools:context=".classes.ui.profiles.profileSubView.ProfileSubViewFragment">

    <LinearLayout
        android:id="@+id/linTopProfileSecion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="horizontal"
        android:padding="4dp">

        <LinearLayout
            android:id="@+id/linPicAndName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="4dp">

            <ImageView
                android:id="@+id/imgProfilePic"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="#BA3A3A"
                tools:src="@drawable/meicon" />

            <TextView
                android:id="@+id/txtProfileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linProfileInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/txtFollowers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="0 followers" />

            <TextView
                android:id="@+id/txtNumPlaylists"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="0 playlists" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="TextView" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linProfileBottomSection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:orientation="vertical"
        android:padding="4dp">

        <LinearLayout
            android:id="@+id/linRecentsLblBar"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="2dp"
            android:background="#1AAF645F"
            android:orientation="horizontal"
            android:padding="2dp">

            <TextView
                android:id="@+id/lblrecents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recents:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="55dp"
                android:layout_height="match_parent" />

            <CheckBox
                android:id="@+id/ckbRecentsExpand"
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:background="@drawable/caretdownicon"
                android:button="@drawable/emptyimg"
                android:checked="true" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/frmRecycRecentHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycRecent"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/linTopsLblBar"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="2dp"
            android:background="#1AAF645F"
            android:orientation="horizontal"
            android:padding="2dp">

            <TextView
                android:id="@+id/lblTops"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="55dp"
                android:layout_height="match_parent" />

            <CheckBox
                android:id="@+id/ckbTopsExpand"
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:background="@drawable/caretdownicon"
                android:button="@drawable/emptyimg"
                android:checked="true" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/frmRecycTopsHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycTop"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

    </LinearLayout>
</LinearLayout>